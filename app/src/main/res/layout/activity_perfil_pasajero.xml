<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_edit_profile"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header con gradiente espectacular -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:background="@drawable/header_gradient"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Círculo de perfil con efecto de neón -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_photo"
                android:padding="6dp"
                android:layout_marginTop="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/text_on_primary"
                    app:civ_border_width="4dp" />

            </LinearLayout>

            <!-- Nombre con efecto gradiente -->
            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/pasajero"
                android:textColor="@color/text_on_primary"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.03"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Badge de estatus -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="🎯 Pasajero Activo"
                android:textColor="@color/primary_200"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_badge_status"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Card principal flotante -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="240dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/surface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/primary_500"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Sección de información de contacto -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 Información de Contacto"
                    android:textColor="@color/primary_500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="8dp" />

                <!-- Tarjeta de información de email -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/primary_50"
                    android:layout_marginBottom="12dp"
                    app:strokeColor="@color/primary_500"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_email"
                            android:tint="@color/primary_500" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/correo"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_copy"
                            android:tint="@color/primary_500"
                            android:contentDescription="Copiar email" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta de información de teléfono -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/primary_50"
                    android:layout_marginBottom="24dp"
                    app:strokeColor="@color/primary_500"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone_enabled"
                            android:tint="@color/primary_500" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Teléfono"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/telefono"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_call"
                            android:tint="@color/primary_500"
                            android:contentDescription="Llamar" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Grid de botones moderno -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚀 Acciones Rápidas"
                    android:textColor="@color/primary_500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:rowCount="2"
                    app:alignmentMode="alignMargins"
                    app:columnOrderPreserved="false"
                    android:padding="8dp">

                    <!-- Botón Editar Perfil -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardEditarPerfil"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/primary_500"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_column="0"
                        app:layout_row="0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_edit"
                                android:tint="@color/text_on_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Editar"
                                android:textColor="@color/text_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Botón Historial -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHistorialReservas"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/secondary_500"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_column="1"
                        app:layout_row="0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_history"
                                android:tint="@color/text_on_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Historial"
                                android:textColor="@color/text_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Botón Volver al Inicio -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardVolverInicio"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/success"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_column="0"
                        app:layout_row="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_home"
                                android:tint="@color/text_on_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Inicio"
                                android:textColor="@color/text_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Botón Cerrar Sesión -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCerrarSesion"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/error"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_column="1"
                        app:layout_row="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_logout"
                                android:tint="@color/text_on_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Salir"
                                android:textColor="@color/text_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>