<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_ruta_item">

        <!-- Origen -->
        <TextView
            android:id="@+id/tvOrigen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origen"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:drawableStart="@drawable/ic_location_from"
            android:drawablePadding="4dp"
            android:drawableTint="@color/text_secondary"/>

        <!-- Destino -->
        <TextView
            android:id="@+id/tvDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destino"
            android:textSize="16sp"
            android:textColor="@color/primary_500"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_location_to"
            android:drawablePadding="4dp"
            android:drawableTint="@color/primary_500"/>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="8dp"/>

        <!-- Horario -->
        <TextView
            android:id="@+id/tvHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:drawableStart="@drawable/baseline_access_time_24"
            android:drawablePadding="4dp"
            android:drawableTint="@color/text_secondary"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>