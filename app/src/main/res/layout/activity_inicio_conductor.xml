<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header con informaciÃ³n del conductor -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_color"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTituloPanel"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/panelConductor"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_driver"
                        android:contentDescription="@string/nombreConductor" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvConductor"
                            style="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_text"/>

                        <TextView
                            android:id="@+id/tvPlacaVehiculo"
                            style="@style/TextAppearance.MaterialComponents.Body2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/text_tertiary"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸ”¥ TARJETA DE ESTADÃSTICAS CON 4 TARJETAS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEstadisticas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/success_light"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- TÃ­tulo de la secciÃ³n -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_stast"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/success"/>

                    <TextView
                        android:id="@+id/tvTituloEstadisticas"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EstadÃ­sticas del DÃ­a"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- ðŸ”¥ FILA 1: INGRESOS (OCUPA TODA LA FILA) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Icono y texto descriptivo -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_monetization"
                                android:tint="@color/warning"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ingresos Totales"
                                android:textAlignment="center"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:layout_marginTop="8dp"
                                android:textStyle="normal"/>
                        </LinearLayout>

                        <!-- Valor de ingresos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvTotalIngresos"
                                style="@style/TextAppearance.MaterialComponents.Headline4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0.00"
                                android:textColor="@color/warning"
                                android:textStyle="bold"
                                android:textAlignment="center"/>

                            <TextView
                                android:id="@+id/tvInfoIngresos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acumulado del dÃ­a"
                                android:textAlignment="center"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:textStyle="italic"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ðŸ”¥ FILA 2: ESTADÃSTICAS GENERALES (2 COLUMNAS) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <!-- ðŸ”¥ TARJETA DE RESERVAS CONFIRMADAS TOTALES -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_checklist"
                                android:tint="@color/success" />

                            <TextView
                                android:id="@+id/tvReservasConfirmadas"
                                style="@style/TextAppearance.MaterialComponents.Headline4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/success"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reservas Confirmadas"
                                android:textAlignment="center"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"
                                android:textStyle="normal"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total del dÃ­a"
                                android:textAlignment="center"
                                android:textColor="@color/text_tertiary"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:textStyle="italic"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ðŸ”¥ TARJETA DE ASIENTOS DISPONIBLES TOTALES -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardBackgroundColor="@color/surface"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_seat"
                                android:tint="@color/primary_color"/>

                            <TextView
                                android:id="@+id/tvAsientosDisponibles"
                                style="@style/TextAppearance.MaterialComponents.Headline4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="14"
                                android:textColor="@color/primary_color"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Asientos Disponibles"
                                android:textAlignment="center"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:layout_marginTop="4dp"
                                android:textStyle="normal"/>

                            <TextView
                                android:id="@+id/tvInfoCapacidad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="De 14 totales"
                                android:textAlignment="center"
                                android:textColor="@color/text_tertiary"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:textStyle="italic"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- ðŸ”¥ FILA 3: ESTADÃSTICAS POR RUTA (2 COLUMNAS) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- ðŸ”¥ TARJETA DE RESERVAS POR RUTA -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardBackgroundColor="@color/info"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_checklist"
                                android:tint="@color/white" />

                            <TextView
                                android:id="@+id/tvReservasRuta"
                                style="@style/TextAppearance.MaterialComponents.Headline4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/info"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvNombreRutaReservas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Natagaima â†’ La Plata"
                                android:textAlignment="center"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:textStyle="normal"
                                android:maxLines="1"
                                android:ellipsize="end"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reservas en esta ruta"
                                android:textAlignment="center"
                                android:textColor="@color/text_tertiary"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:textStyle="italic"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- ðŸ”¥ TARJETA DE ASIENTOS POR RUTA -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardBackgroundColor="@color/info"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_seat"
                                android:tint="@color/white"/>

                            <TextView
                                android:id="@+id/tvAsientosRuta"
                                style="@style/TextAppearance.MaterialComponents.Headline4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="14"
                                android:textColor="@color/warning"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvNombreRutaAsientos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nataga â†’ La Plata"
                                android:textAlignment="center"
                                android:textColor="@color/text_on_primary"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:textStyle="normal"
                                android:maxLines="1"
                                android:ellipsize="end"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Asientos en esta ruta"
                                android:textAlignment="center"
                                android:textColor="@color/text_tertiary"
                                android:textSize="11sp"
                                android:layout_marginTop="2dp"
                                android:textStyle="italic"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- InformaciÃ³n adicional -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"
                    android:background="@drawable/bg_info_stats">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_info"
                        android:tint="@color/text_secondary"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actualizado en tiempo real"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="italic"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SecciÃ³n de Reservas Activas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardReservas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_color"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardEstadisticas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_save"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/primary_500"/>

                    <TextView
                        android:id="@+id/tvReservasActivas"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reservasPendientes"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerReservas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:minHeight="200dp"
                    android:paddingVertical="12dp"
                    tools:listitem="@layout/item_reserva" />

                <TextView
                    android:id="@+id/tvEmptyReservas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_hay_reservas"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SecciÃ³n de PrÃ³ximas Rutas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRutas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardReservas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_route"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/primary_color"/>

                    <TextView
                        android:id="@+id/tvProximaRuta"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/proximasRutas"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerProximasRutas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="140dp"
                    android:clipToPadding="false"
                    android:paddingVertical="12dp"
                    tools:listitem="@layout/item_reserva"/>

                <TextView
                    android:id="@+id/tvEmptyRutas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_hay_rutas"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardRutas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPerfilConductor"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/perfilConductor"
                android:textAllCaps="false"
                app:cornerRadius="26dp"
                app:icon="@drawable/ic_driver"
                app:iconGravity="textStart"
                app:iconTint="@color/primary_color"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCerrarSesion"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="@string/cerrarSesion"
                android:textAllCaps="false"
                app:cornerRadius="26dp"
                app:icon="@drawable/ic_logout"
                app:iconGravity="textStart"
                app:backgroundTint="@color/primary_color"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>