<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.CrearReservas">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/seleccionaAsiento"
            app:titleTextColor="@color/text_on_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationContentDescription="@string/volver"
        style="@style/Widget.MaterialComponents.Toolbar.Primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- SECCIÓN DE INFORMACIÓN DEL VIAJE SELECCIONADO -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/infoViajeCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/surface_variant"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu Viaje Seleccionado"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <!-- Información de Ruta -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_route"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvRutaSeleccionada"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="---- → ----"
                                android:textAppearance="?attr/textAppearanceSubtitle1"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDescripcionRuta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tiempo estimado: -- min"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Información de Horario -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_schedule"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvHorarioSeleccionado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--:-- --"
                                android:textAppearance="?attr/textAppearanceSubtitle1"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvFechaViaje"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="hoy, DD de MM del AAAA"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Información del Vehículo y Conductor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_bus"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvVehiculoInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vehículo: ----- - ------ ---"
                                android:textStyle="bold"
                                android:textAppearance="?attr/textAppearanceBody2" />

                            <TextView
                                android:id="@+id/tvCapacidadInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Capacidad: -- asientos"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary" />
                            <TextView
                                android:id="@+id/tvCapacidadDispo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Capacidad disponible: --"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Información del Conductor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_driver"
                            android:tint="?attr/colorPrimary"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conductor:"
                                android:textAppearance="?attr/textAppearanceSubtitle2"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvNombreConductor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-------"
                                android:textAppearance="?attr/textAppearanceBody2"
                                android:textColor="?android:attr/textColorSecondary" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- INSTRUCCIÓN PARA SELECCIÓN DE ASIENTOS -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/instruccionCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/info"
                app:layout_constraintTop_toBottomOf="@id/infoViajeCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_info"
                        android:tint="@color/black"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Selecciona tu asiento preferido"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/black" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN DE CABINA (Conductor + Asientos 1-5) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cabinaCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/instruccionCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cabina"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Layout de cabina: Conductor + Asientos 1-5 -->
                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:columnCount="3"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:rowOrderPreserved="false">

                        <!-- Fila 1: Conductor y Asientos 1-2 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConductor"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/ic_driver"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp"
                            android:enabled="false" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento1"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento2"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <!-- Fila 2: Asientos 3-5 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento3"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento4"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento5"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN DE PARTE TRASERA (Asientos 6-14) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/parteTraseraCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/cabinaCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parte Trasera"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Grid de asientos traseros 6-14 -->
                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:columnCount="3"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:rowOrderPreserved="false">

                        <!-- Fila 1: Asientos 6-8 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento6"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento7"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento8"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <!-- Fila 2: Asientos 9-11 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento9"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento10"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento11"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <!-- Fila 3: Asientos 12-14 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento12"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento13"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAsiento14"
                            style="@style/AsientoButtonStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="6dp"
                            app:icon="@drawable/asiento_disponible"
                            app:iconGravity="textStart"
                            app:cornerRadius="8dp" />

                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Leyenda de estados de asientos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/leyendaCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/parteTraseraCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="4dp">

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/asiento_disponible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disponible"
                            android:layout_marginStart="8dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="4dp">

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/asiento_seleccionado" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seleccionado"
                            android:layout_marginStart="8dp"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="4dp">

                        <View
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/asiento_ocupado" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ocupado"
                            android:layout_marginStart="8dp"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CONTENEDOR PARA BOTONES DE CONFIRMAR Y CANCELAR -->
            <LinearLayout
                android:id="@+id/botonesLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/leyendaCardView"
                app:layout_constraintWidth_percent="0.9">

                <!-- Botón Cancelar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/cancelar"
                    android:padding="16dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_cancel"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="1dp" />

                <!-- Botón Confirmar Reserva -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonConfirmar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/confirmarReserva"
                    android:padding="16dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_check"
                    app:iconGravity="textStart"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>