                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A5"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:background="@drawable/bg_chip_primary"
                                android:backgroundTint="@color/primary_100"
                                android:textColor="@color/primary_700"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                    </androidx.gridlayout.widget.GridLayout>

                    <!-- Precio destacado - Mejorado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_price_highlight"
                        android:backgroundTint="@color/primary_50"
                        android:padding="24dp"
                        android:paddingVertical="20dp"
                        app:cornerRadius="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total a pagar"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvPrecio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$12,000"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_600" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="COP"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÃ“N: CONTACTOS MEJORADA -->
