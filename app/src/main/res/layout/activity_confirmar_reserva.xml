<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.passenger.reservation.confirmReservation.ConfirmarReservaActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_500"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/confirmarReserva"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationContentDescription="@string/volver"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="8dp">

            <!-- BANNER DE CONFIRMACIÓN MEJORADO -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/primary_50"
                app:strokeColor="@color/primary_100"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_check"
                        android:tint="@color/primary_600"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/revisa_confirma_reserva"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_700" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/verifica_info_reserva"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN: DETALLES DEL VIAJE MEJORADA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/surface"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header con indicador de sección -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_primary"
                            android:gravity="center"
                            android:backgroundTint="@color/primary_500">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_1"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/detalles_viaje"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <!-- Línea de tiempo del viaje - Mejorada visualmente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="28dp"
                        android:paddingVertical="16dp"
                        android:background="@drawable/bg_timeline">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvOrigen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_700"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/origen"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary"
                                android:layout_marginTop="6dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            android:tint="@color/primary_400"
                            android:layout_marginHorizontal="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvDestino"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_700"
                                android:maxLines="1"
                                android:ellipsize="end" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/destino"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary"
                                android:layout_marginTop="6dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Grid de detalles - Mejorado visualmente -->
                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:columnOrderPreserved="false"
                        android:layout_marginBottom="24dp">

                        <!-- Fecha -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_column="0"
                            app:layout_row="0"
                            app:layout_columnWeight="1"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fecha"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary" />

                            <TextView
                                android:id="@+id/tvFecha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Hora -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_column="1"
                            app:layout_row="0"
                            app:layout_columnWeight="1"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hora_salida"
                                android:textColor="@color/text_tertiary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvHora"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hora"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Duración -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_column="0"
                            app:layout_row="1"
                            app:layout_columnWeight="1"
                            android:layout_marginEnd="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/duracion"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary" />

                            <TextView
                                android:id="@+id/tvTiempoEstimado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Asiento -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_column="1"
                            app:layout_row="1"
                            app:layout_columnWeight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/asiento"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary" />

                            <TextView
                                android:id="@+id/tvAsiento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:background="@drawable/bg_chip_primary"
                                android:backgroundTint="@color/primary_100"
                                android:textColor="@color/primary_700"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="8dp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                    </androidx.gridlayout.widget.GridLayout>

                    <!-- Precio destacado - Mejorado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_price_highlight"
                        android:backgroundTint="@color/primary_50"
                        android:padding="24dp"
                        android:paddingVertical="20dp"
                        app:cornerRadius="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total_pagar"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvPrecio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_600" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/moneda_cop"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN: CONTACTOS MEJORADA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardContactos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/surface"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header con indicador -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_primary"
                            android:gravity="center"
                            android:backgroundTint="@color/primary_500">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_2"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_contacto"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <!-- Tarjeta del Pasajero - Mejorada visualmente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:background="@drawable/bg_contact_card"
                        android:backgroundTint="@color/surface_variant"
                        android:layout_marginBottom="16dp"
                        app:cornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_primary"
                            android:backgroundTint="@color/primary_100"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_person"
                                android:tint="@color/primary_600" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tu"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary" />

                            <TextView
                                android:id="@+id/tvUsuario"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvTelefonoP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="6dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Tarjeta del Conductor - Mejorada visualmente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:background="@drawable/bg_contact_card"
                        android:backgroundTint="@color/surface_variant"
                        app:cornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_primary"
                            android:backgroundTint="@color/secondary_100"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_driver"
                                android:tint="@color/secondary_600" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/conductor"
                                android:textSize="12sp"
                                android:textColor="@color/text_tertiary" />

                            <TextView
                                android:id="@+id/tvConductor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvPlaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp" />

                            <TextView
                                android:id="@+id/tvTelefonoC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cargando"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECCIÓN: PAGO MEJORADA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/surface"
                app:strokeColor="@color/outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header con indicador -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_primary"
                            android:gravity="center"
                            android:backgroundTint="@color/primary_500">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_3"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/metodoPago"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginStart="12dp" />
                    </LinearLayout>

                    <!-- Opciones de pago - Mejoradas visualmente -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardEfectivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="@color/primary_50"
                        app:strokeColor="@color/primary_300"
                        app:strokeWidth="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_circle_primary"
                                android:backgroundTint="@color/primary_100"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_cash"
                                    android:tint="@color/primary_600" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pago_efectivo"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_700" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pago_efectivo_desc"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/checkIconEfectivo"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_check"
                                android:tint="@color/primary_600"
                                android:visibility="visible" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTransferencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:backgroundTint="@color/surface"
                        app:strokeColor="@color/outline"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_circle_primary"
                                android:backgroundTint="@color/neutral_100"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_transfer"
                                    android:tint="@color/text_secondary" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pago_transferencia"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pago_transferencia_desc"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/checkIconTransferencia"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_check"
                                android:tint="@color/primary_600"
                                android:visibility="gone" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Información adicional de pago -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_info_card"
                        android:backgroundTint="@color/info_50"
                        android:padding="16dp"
                        android:layout_marginTop="16dp"
                        app:cornerRadius="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            android:tint="@color/info_600"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/info_pago_efectivo"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:lineSpacingExtra="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BOTONES DE ACCIÓN MEJORADOS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Botón Confirmar mejorado -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConfirmar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/confirmarReserva"
                    android:textSize="16sp"
                    android:paddingVertical="18dp"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_check"
                    app:iconSize="20dp"
                    app:iconPadding="8dp"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.Button"
                    android:backgroundTint="@color/primary_500"
                    android:textColor="@color/white"
                    app:rippleColor="@color/ripple_primary" />

                <!-- Botón Cancelar mejorado -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancelar"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"
                    app:cornerRadius="16dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@color/outline"
                    app:strokeWidth="1dp"
                    android:textColor="@color/text_primary"
                    app:rippleColor="@color/ripple_color" />
            </LinearLayout>

            <!-- INFORMACIÓN ADICIONAL MEJORADA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@drawable/bg_info_card"
                android:backgroundTint="@color/surface_1"
                app:cornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_importante"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_confirmacion_reserva"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="8dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>