                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- DuraciÃ³n -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_column="0"
                            app:layout_row="1"
