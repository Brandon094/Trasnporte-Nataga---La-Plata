<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_edit_profile"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header con gradiente espectacular -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:background="@drawable/header_gradient_driver"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- CÃ­rculo de perfil con efecto de neÃ³n -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_photo_driver"
                android:padding="6dp"
                android:layout_marginTop="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfilePicture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/text_on_primary"
                    app:civ_border_width="4dp" />

            </LinearLayout>

            <!-- Nombre con efecto gradiente -->
            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/nombreConductor"
                android:textColor="@color/text_on_primary"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.03"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <!-- Badge de estatus especÃ­fico para conductor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="ðŸš— Conductor Activo"
                android:textColor="@color/primary_200"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_badge_status_driver"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Card principal flotante -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="260dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/surface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/primary_500"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- SecciÃ³n de informaciÃ³n de contacto -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ InformaciÃ³n del Conductor"
                    android:textColor="@color/primary_500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:drawablePadding="8dp" />

                <!-- Tarjeta de informaciÃ³n de email -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/primary_50"
                    android:layout_marginBottom="12dp"
                    app:strokeColor="@color/primary_500"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_email"
                            android:tint="@color/primary_500" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/correo"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tarjeta de informaciÃ³n de telÃ©fono -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/primary_50"
                    android:layout_marginBottom="24dp"
                    app:strokeColor="@color/primary_500"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone_enabled"
                            android:tint="@color/primary_500" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TelÃ©fono"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/telefono"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- SecciÃ³n de informaciÃ³n del vehÃ­culo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš— InformaciÃ³n del VehÃ­culo"
                    android:textColor="@color/primary_500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp" />

                <!-- Grid de informaciÃ³n del vehÃ­culo -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:rowCount="2"
                    app:alignmentMode="alignMargins"
                    app:columnOrderPreserved="false"
                    android:padding="4dp">

                    <!-- Card Placa -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPlaca"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:layout_column="0"
                        app:layout_row="0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_license"
                                android:tint="@color/primary_500" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Placa"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvPlacaVehiculo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/placa"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card Modelo -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardModelo"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:layout_column="1"
                        app:layout_row="0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_car_model"
                                android:tint="@color/primary_500" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Modelo"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvModeloVehiculo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/modelo"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card Capacidad -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCapacidad"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:layout_column="0"
                        app:layout_row="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_capacidad"
                                android:tint="@color/primary_500" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Capacidad"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvCapacidadVehiculo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/capacidad"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Card AÃ±o -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAnio"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/surface_variant"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:layout_column="1"
                        app:layout_row="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_calendar"
                                android:tint="@color/primary_500" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="AÃ±o"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvAnioVehiculo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2023"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

                <!-- Grid de botones moderno -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš¡ Acciones RÃ¡pidas"
                    android:textColor="@color/primary_500"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:rowCount="2"
                    app:alignmentMode="alignMargins"
                    app:columnOrderPreserved="false"
                    android:padding="8dp">

                    <!-- BotÃ³n Editar Perfil -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardEditarPerfil"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/primary_500"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_column="0"
                        app:layout_row="0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_edit"
                                android:tint="@color/text_on_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Editar"
                                android:textColor="@color/text_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- BotÃ³n Historial Viajes -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardHistorialViajes"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/secondary_500"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_column="1"
                        app:layout_row="0">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_stast"
                                android:tint="@color/text_on_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Viajes"
                                android:textColor="@color/text_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- BotÃ³n Disponibilidad -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardInicio"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/success"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_column="0"
                        app:layout_row="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_home"
                                android:tint="@color/text_on_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Inicio"
                                android:textColor="@color/text_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- BotÃ³n Cerrar SesiÃ³n -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCerrarSesion"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/error"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:layout_column="1"
                        app:layout_row="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_logout"
                                android:tint="@color/text_on_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Salir"
                                android:textColor="@color/text_on_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>