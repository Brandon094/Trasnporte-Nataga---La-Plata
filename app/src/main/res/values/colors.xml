<resources>
    <!-- ==================== -->
    <!-- COLORES PRIMARIOS EXISTENTES -->
    <!-- ==================== -->
    <color name="primary_500">#1A73E8</color>
    <color name="primary_700">#0D47A1</color>
    <color name="primary_200">#8AB4F8</color>
    <color name="primary_50">#E8F0FE</color>

    <!-- NUEVOS TONOS MÁS OSCUROS -->
    <color name="primary_800">#083C87</color>
    <color name="primary_900">#062F6B</color>

    <!-- COLOR SECUNDARIO -->
    <color name="secondary_500">#FF6D00</color>
    <color name="secondary_700">#E65100</color>
    <color name="secondary_200">#FFAB40</color>
    <color name="secondary_50">#FFF3E0</color>
    <color name="secondary_800">#CC4500</color>

    <!-- ==================== -->
    <!-- COLORES PARA MODO OSCURO -->
    <!-- ==================== -->
    <!-- Fondos oscuros -->
    <color name="dark_background">#121212</color>  <!-- Fondo principal muy oscuro -->
    <color name="dark_surface">#1E1E1E</color>    <!-- Superficies como cards -->
    <color name="dark_surface_variant">#2D2D2D</color>  <!-- Variante de superficie -->
    <color name="dark_status_bar">#000000</color>  <!-- Status bar negro puro -->
    <color name="dark_navigation_bar">#000000</color>  <!-- Navigation bar negro -->

    <!-- Textos para modo oscuro -->
    <color name="dark_text_primary">#FFFFFF</color>  <!-- Texto principal blanco -->
    <color name="dark_text_secondary">#B3B3B3</color>  <!-- Texto secundario gris claro -->
    <color name="dark_text_tertiary">#808080</color>  <!-- Texto terciario gris medio -->
    <color name="dark_on_background">#FFFFFF</color>  <!-- Texto sobre fondo oscuro -->
    <color name="dark_on_surface">#FFFFFF</color>  <!-- Texto sobre superficie oscura -->

    <!-- ==================== -->
    <!-- COLORES DE TEXTO EXISTENTES (modo claro) -->
    <!-- ==================== -->
    <color name="text_primary">#202124</color>
    <color name="text_secondary">#5F6368</color>
    <color name="text_tertiary">#9AA0A6</color>
    <color name="text_on_primary">#FFFFFF</color>
    <color name="text_on_secondary">#FFFFFF</color>

    <!-- ==================== -->
    <!-- COLORES DE FONDO EXISTENTES -->
    <!-- ==================== -->
    <color name="background">#FFFFFF</color>
    <color name="surface">#FFFFFF</color>
    <color name="surface_variant">#F1F3F4</color>
    <color name="error">#D32F2F</color>

    <!-- ==================== -->
    <!-- COLORES PARA ASIENTOS (adaptados para oscuro) -->
    <!-- ==================== -->
    <color name="seat_available">#34A853</color>
    <color name="seat_selected">#1A73E8</color>
    <color name="seat_booked">#666666</color>  <!-- Gris más visible en oscuro -->
    <color name="seat_disabled">#404040</color>  <!-- Gris oscuro -->

    <!-- ==================== -->
    <!-- COLORES PARA ESTADOS -->
    <!-- ==================== -->
    <color name="status_confirmed">#34A853</color>
    <color name="status_pending">#FBBC04</color>
    <color name="status_cancelled">#D32F2F</color>
    <color name="status_completed">#5F6368</color>

    <!-- Estados de reserva para modo oscuro -->
    <color name="status_confirmed_dark">#1B3A1E</color>  <!-- Fondo verde oscuro -->
    <color name="status_cancelled_dark">#3A1B1B</color>  <!-- Fondo rojo oscuro -->
    <color name="status_pending_dark">#3A3200</color>  <!-- Fondo amarillo oscuro -->

    <!-- ==================== -->
    <!-- COLORES ADICIONALES PARA MODO OSCURO -->
    <!-- ==================== -->
    <color name="divider_dark">#383838</color>  <!-- Separadores en modo oscuro -->
    <color name="overlay_dark">#CC000000</color>  <!-- Overlay oscuro -->
    <color name="shadow_dark">#80000000</color>  <!-- Sombras más intensas -->

    <!-- ==================== -->
    <!-- COLORES PARA CHIPS Y SELECTORES -->
    <!-- ==================== -->
    <color name="chip_background_selector">#E0E0E0</color>  <!-- Fondo normal de chips -->
    <color name="chip_background_selected">#1A73E8</color>  <!-- Fondo chip seleccionado -->
    <color name="chip_text_selected">#FFFFFF</color>  <!-- Texto chip seleccionado -->

    <!-- Estados de chips -->
    <color name="chip_state_pressed">#BDBDBD</color>  <!-- Cuando se presiona -->
    <color name="chip_state_selected">#1A73E8</color>  <!-- Cuando está seleccionado -->
    <color name="chip_state_disabled">#F5F5F5</color>  <!-- Cuando está deshabilitado -->

    <!-- ==================== -->
    <!-- COLORES PARA BADGES/ESTADOS (FONDOS CLAROS) -->
    <!-- ==================== -->
    <color name="status_confirmed_light">#E8F5E8</color>  <!-- Fondo verde claro -->
    <color name="status_pending_light">#FFF8E1</color>  <!-- Fondo amarillo claro -->
    <color name="status_cancelled_light">#FFEBEE</color>  <!-- Fondo rojo claro -->
    <color name="status_completed_light">#F5F5F5</color>  <!-- Fondo gris claro -->

    <!-- ==================== -->
    <!-- COLORES ADICIONALES PARA COMPONENTES -->
    <!-- ==================== -->
    <color name="divider">#E0E0E0</color>  <!-- Separadores modo claro -->
    <color name="outline">#E0E0E0</color>  <!-- Bordes/outlines -->
    <color name="overlay">#66000000</color>  <!-- Overlay modo claro -->
    <color name="shadow">#42000000</color>  <!-- Sombra modo claro -->

    <!-- Colores para ripple/efectos -->
    <color name="ripple_color">#1A000000</color>  <!-- Color ripple estándar -->
    <color name="ripple_primary">#1A1A73E8</color>  <!-- Ripple color primario -->

    <!-- ==================== -->
    <!-- COLORES PARA SUPERFICIES Y ELEVACION -->
    <!-- ==================== -->
    <color name="surface_1">#FDFDFD</color>  <!-- Surface con elevación 1 -->
    <color name="surface_2">#FAFAFA</color>  <!-- Surface con elevación 2 -->
    <color name="surface_3">#F7F7F7</color>  <!-- Surface con elevación 3 -->
    <color name="surface_4">#F4F4F4</color>  <!-- Surface con elevación 4 -->

    <!-- ==================== -->
    <!-- COLORES PARA SCROLLBARS Y BORDES -->
    <!-- ==================== -->
    <color name="scrollbar_thumb">#1A000000</color>  <!-- Scrollbar thumb -->
    <color name="scrollbar_track">#0A000000</color>  <!-- Scrollbar track -->
    <color name="border_light">#EEEEEE</color>  <!-- Bordes ligeros -->

    <!-- ==================== -->
    <!-- ALIAS PARA COMPATIBILIDAD -->
    <!-- ==================== -->
    <color name="primary_color">@color/primary_500</color>
    <color name="secondary_color">@color/secondary_500</color>
    <color name="primary_text">@color/text_primary</color>
    <color name="secondary_text">@color/text_secondary</color>
    <color name="background_color">@color/background</color>
    <color name="card_background">@color/surface_variant</color>
    <color name="success_light">#E8F5E8</color>
    <color name="warning">@color/status_cancelled</color>
    <color name="success">@color/seat_available</color>
</resources>