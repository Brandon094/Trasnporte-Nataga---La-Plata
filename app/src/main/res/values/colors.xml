<resources>
    <!-- ==================== -->
    <!-- COLORES PRIMARIOS -->
    <!-- ==================== -->
    <color name="primary_500">#1A73E8</color>  <!-- Azul Google (confianza, tecnología) -->
    <color name="primary_700">#0D47A1</color>  <!-- Azul más oscuro -->
    <color name="primary_200">#8AB4F8</color>  <!-- Azul claro -->
    <color name="primary_50">#E8F0FE</color>   <!-- Azul muy claro para fondos -->

    <!-- COLOR SECUNDARIO (naranja energético) -->
    <color name="secondary_500">#FF6D00</color>
    <color name="secondary_700">#E65100</color>
    <color name="secondary_200">#FFAB40</color>
    <color name="secondary_50">#FFF3E0</color>

    <!-- ==================== -->
    <!-- COLORES DE TEXTO -->
    <!-- ==================== -->
    <color name="text_primary">#202124</color>  <!-- Negro casi puro -->
    <color name="text_secondary">#5F6368</color>  <!-- Gris oscuro -->
    <color name="text_tertiary">#9AA0A6</color>  <!-- Gris medio -->
    <color name="text_on_primary">#FFFFFF</color>  <!-- Blanco para texto sobre fondos oscuros -->
    <color name="text_on_secondary">#FFFFFF</color>

    <!-- ==================== -->
    <!-- COLORES DE FONDO -->
    <!-- ==================== -->
    <color name="background">#FFFFFF</color>
    <color name="surface">#FFFFFF</color>
    <color name="surface_variant">#F1F3F4</color>  <!-- Gris muy claro -->
    <color name="error">#D32F2F</color>  <!-- Rojo para errores -->

    <!-- ==================== -->
    <!-- COLORES PARA ASIENTOS -->
    <!-- ==================== -->
    <color name="seat_available">#34A853</color>  <!-- Verde Google (disponible) -->
    <color name="seat_selected">#1A73E8</color>  <!-- Azul (seleccionado) -->
    <color name="seat_booked">#9AA0A6</color>  <!-- Gris (ocupado) -->
    <color name="seat_disabled">#E8EAED</color>  <!-- Gris claro (no disponible) -->

    <!-- ==================== -->
    <!-- COLORES PARA ESTADOS -->
    <!-- ==================== -->
    <color name="status_confirmed">#34A853</color>  <!-- Verde (confirmado) -->
    <color name="status_pending">#FBBC04</color>  <!-- Amarillo (pendiente) -->
    <color name="status_cancelled">#D32F2F</color>  <!-- Rojo (cancelado) -->
    <color name="status_completed">#5F6368</color>  <!-- Gris (completado) -->

    <!-- ==================== -->
    <!-- COLORES ADICIONALES -->
    <!-- ==================== -->
    <color name="divider">#E0E0E0</color>  <!-- Para separadores -->
    <color name="shadow">#42000000</color>  <!-- Sombra semi-transparente -->
    <color name="overlay">#66000000</color>  <!-- Overlay oscuro -->
    <color name="success">#34A853</color>  <!-- Verde para éxito -->
    <color name="warning">#FBBC04</color>  <!-- Amarillo para advertencias -->
    <color name="info">#1A73E8</color>  <!-- Azul para información -->

    <!-- ==================== -->
    <!-- ALIAS PARA COMPATIBILIDAD -->
    <!-- ==================== -->
    <color name="primary_color">@color/primary_500</color>
    <color name="secondary_color">@color/secondary_500</color>
    <color name="primary_text">@color/text_primary</color>
    <color name="secondary_text">@color/text_secondary</color>
    <color name="background_color">@color/background</color>
    <color name="card_background">@color/surface_variant</color>
    <color name="success_light">#E8F5E8</color>
</resources>