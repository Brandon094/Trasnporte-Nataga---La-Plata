<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal MD2 -->
    <style name="Theme.TrasnporteNatagaLaPlata" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorPrimaryVariant">@color/primary_200</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorBackgroundFloating">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_on_primary</item>

        <!-- Status and navigation bars -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="cardViewStyle">@style/CardViewStyle</item>
    </style>

    <!-- Tema sin ActionBar para actividades -->
    <style name="Theme.TrasnporteNatagaLaPlata.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Tema para Splash Screen (compatible) -->
    <style name="Theme.TrasnporteNatagaLaPlata.Splash">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Estilos de componentes -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_500</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>