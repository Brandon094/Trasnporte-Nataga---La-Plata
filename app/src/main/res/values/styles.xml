<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ==================== -->
    <!-- STYLES PARA BOTONES DE ASIENTOS MEJORADOS -->
    <!-- ==================== -->

    <!-- Estilo base para todos los botones de asiento -->
    <style name="AsientoButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="cornerRadius">10dp</item>

        <!-- Icono -->
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@null</item> <!-- Importante: deshabilitar tint del icono -->

        <!-- Colores base -->
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/outline</item>
        <item name="strokeWidth">1.5dp</item>

        <!-- Efectos y estados -->
        <item name="rippleColor">@color/ripple_success</item>
        <item name="android:stateListAnimator">@animator/asiento_button_state_animator</item>

        <!-- ElevaciÃ³n sutil -->
        <item name="elevation">1dp</item>
        <item name="android:outlineAmbientShadowColor">@color/shadow</item>
        <item name="android:outlineSpotShadowColor">@color/shadow</item>
    </style>

    <!-- Estilo para asiento disponible -->
    <style name="AsientoButtonStyle.Disponible">
        <!-- Hereda todo de AsientoButtonStyle -->
    </style>

    <!-- Estilo para asiento seleccionado -->
    <style name="AsientoButtonStyle.Seleccionado" parent="AsientoButtonStyle">
        <item name="strokeColor">@color/primary_500</item>
        <item name="strokeWidth">2.5dp</item>
        <item name="backgroundTint">@color/primary_50</item>
        <item name="rippleColor">@color/ripple_primary</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- Estilo para asiento ocupado -->
    <style name="AsientoButtonStyle.Ocupado" parent="AsientoButtonStyle">
        <item name="strokeColor">@color/neutral_400</item>
        <item name="backgroundTint">@color/neutral_100</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="android:enabled">false</item>
    </style>

    <!-- Estilo para asiento de conductor -->
    <style name="AsientoButtonStyle.Conductor" parent="AsientoButtonStyle.Ocupado">
        <item name="backgroundTint">@color/surface_2</item>
        <item name="strokeColor">@color/neutral_500</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <!-- ==================== -->
    <!-- STYLES PARA FILTROS CHIP (MD2) - MODE ADAPTIVE -->
    <!-- ==================== -->
    <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>

        <item name="checkedIcon">@null</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">?attr/colorOutline</item>
    </style>

    <style name="FilterChipSelected" parent="FilterChip">
        <item name="chipBackgroundColor">@color/chip_background_selected</item>
        <item name="android:textColor">@color/chip_text_selected</item>
    </style>

    <!-- ==================== -->
    <!-- STYLES PARA BOTONES (MD2) - MODE ADAPTIVE -->
    <!-- ==================== -->
    <style name="ButtonOutlineSmall" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ButtonFilledSmall" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- ==================== -->
    <!-- STYLES PARA FAB (MD2) - MODE ADAPTIVE -->
    <!-- ==================== -->
    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="elevation">6dp</item>
        <item name="rippleColor">?attr/colorPrimaryContainer</item>
        <item name="hoveredFocusedTranslationZ">8dp</item>
    </style>

    <!-- ==================== -->
    <!-- STYLES PARA CARDS DE RESERVA - MODE ADAPTIVE -->
    <!-- ==================== -->
    <style name="ReservaCardStyle" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ReservaCardElevated" parent="ReservaCardStyle">
        <item name="cardElevation">4dp</item>
        <item name="cardMaxElevation">8dp</item>
    </style>

    <!-- ==================== -->
    <!-- STYLES PARA TEXTOS - MODE ADAPTIVE -->
    <!-- ==================== -->
    <style name="TextTitleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextTitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextBodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextBodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- ==================== -->
    <!-- STYLES PARA ESTADOS DE RESERVA -->
    <!-- ==================== -->
    <style name="StatusBadgeConfirmed">
        <item name="android:background">@drawable/bg_estado_confirmado</item>
        <item name="android:textColor">@color/status_confirmed</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">2dp</item>
    </style>

    <style name="StatusBadgePending">
        <item name="android:background">@drawable/bg_estado_pendiente</item>
        <item name="android:textColor">@color/status_pending</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">2dp</item>
    </style>

    <style name="StatusBadgeCancelled">
        <item name="android:background">@drawable/bg_estado_cancelado</item>
        <item name="android:textColor">@color/status_cancelled</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">2dp</item>
    </style>

    <!-- ==================== -->
    <!-- STYLES PARA DIVIDERS -->
    <!-- ==================== -->
    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutline</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorOutline</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardTopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardBottomRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
    </style>
</resources>