<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema nocturno MD2 más oscuro -->
    <style name="Theme.TrasnporteNatagaLaPlata" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (más claro para modo oscuro) -->
        <item name="colorPrimary">@color/primary_200</item> <!-- #8AB4F8 - más visible en oscuro -->
        <item name="colorPrimaryDark">@color/primary_900</item> <!-- #062F6B -->
        <item name="colorPrimaryVariant">@color/primary_500</item> <!-- #8AB4F8 -->
        <item name="colorOnPrimary">@color/black</item> <!-- Texto negro sobre primary claro -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_200</item> <!-- #FFAB40 - más visible -->
        <item name="colorSecondaryVariant">@color/secondary_500</item> <!-- #FFAB40 -->
        <item name="colorOnSecondary">@color/black</item> <!-- Texto negro sobre secondary -->

        <!-- Background colors oscuros -->
        <item name="android:colorBackground">@color/dark_background</item> <!-- #121212 -->
        <item name="colorBackgroundFloating">@color/dark_surface</item> <!-- #1E1E1E -->
        <item name="colorOnBackground">@color/dark_on_background</item> <!-- #FFFFFF -->

        <!-- Surface colors oscuros -->
        <item name="colorSurface">@color/dark_surface</item> <!-- #1E1E1E -->
        <item name="colorOnSurface">@color/dark_on_surface</item> <!-- #FFFFFF -->

        <!-- Error color -->
        <item name="colorError">@color/error</item> <!-- #D32F2F -->
        <item name="colorOnError">@color/white</item> <!-- Blanco sobre error -->

        <!-- Status bar más oscuros -->
        <item name="android:statusBarColor">@color/dark_status_bar</item> <!-- #062F6B -->
        <item name="android:navigationBarColor">@color/dark_navigation_bar</item> <!-- #000000 -->

        <!-- Text colors para modo oscuro -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item> <!-- #FFFFFF -->
        <item name="android:textColorSecondary">@color/dark_text_secondary</item> <!-- #B3B3B3 -->

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/ButtonStyleDark</item>
        <item name="cardViewStyle">@style/CardViewDark</item>

        <!-- Configuración para tema oscuro -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.TrasnporteNatagaLaPlata.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dark_background</item> <!-- #121212 -->
        <item name="android:statusBarColor">@color/dark_status_bar</item> <!-- #062F6B -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.TrasnporteNatagaLaPlata.Splash">
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- CardView estilo oscuro -->
    <style name="CardViewDark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_surface</item> <!-- #1E1E1E -->
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/dark_outline</item> <!-- #404040 -->
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Button estilo oscuro -->
    <style name="ButtonStyleDark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_200</item> <!-- #8AB4F8 -->
        <item name="android:textColor">@color/black</item> <!-- Texto negro sobre fondo claro -->
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>
</resources>