<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema nocturno MD2 m치s oscuro -->
    <style name="Theme.TrasnporteNatagaLaPlata" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (m치s oscuro para modo oscuro) -->
        <item name="colorPrimary">@color/primary_700</item>
        <item name="colorPrimaryDark">@color/primary_900</item>
        <item name="colorPrimaryVariant">@color/primary_800</item>
        <item name="colorOnPrimary">@color/primary_200</item>

        <!-- Background colors mucho m치s oscuros -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorBackgroundFloating">@color/dark_surface</item>
        <item name="colorOnBackground">@color/dark_on_background</item>

        <!-- Surface colors oscuros -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>

        <!-- Secondary colors para modo oscuro -->
        <item name="colorSecondary">@color/secondary_700</item>
        <item name="colorSecondaryVariant">@color/secondary_800</item>
        <item name="colorOnSecondary">@color/secondary_200</item>

        <!-- Status bar m치s oscuros -->
        <item name="android:statusBarColor">@color/dark_status_bar</item>
        <item name="android:navigationBarColor">@color/dark_navigation_bar</item>

        <!-- Text colors para modo oscuro -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>

        <!-- CardView colors -->
        <item name="cardViewStyle">@style/CardViewDark</item>
    </style>

    <style name="Theme.TrasnporteNatagaLaPlata.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:statusBarColor">@color/dark_status_bar</item>
    </style>

    <!-- CardView estilo oscuro -->
    <style name="CardViewDark" parent="CardView">
        <item name="cardBackgroundColor">@color/dark_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
</resources>